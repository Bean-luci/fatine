package _07_Exo;

import java.util.Scanner;

public class _04_Exo {

	public static void main(String[] args) {
		System.out.println("Entez un nombre:");
        Scanner input = new Scanner(System.in);
        int x;
        x = input.nextInt();
         if (x % 3==0){
             System.out.println("Le nombre est divisible par 3");
             if(x % 15==0){
                 System.out.println("Le nombre est divisible par 15");
             } 
         }
         
        

	}

}
